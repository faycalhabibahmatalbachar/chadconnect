# ============================================
# ChadConnect Server - Configuration Locale
# ============================================

# Base de données MySQL (XAMPP)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=chadconnect

# Port du serveur API
PORT=3001

# JWT Secret (IMPORTANT: Changez pour un secret aléatoire en production!)
JWT_SECRET=dev-secret-change-me-in-production-12345

# JWT Expires In (durée de validité du token d'accès)
JWT_EXPIRES_IN=7d

# JWT Refresh Expires In (durée de validité du refresh token)
JWT_REFRESH_EXPIRES_IN=30d

# CORS Origins (laissez vide pour autoriser toutes les origines en dev)
CORS_ORIGINS=

# ============================================
# Services Optionnels
# ============================================

# Firebase Admin SDK (pour les notifications push)
# Décommentez et remplissez si vous voulez activer les notifications
# FIREBASE_PROJECT_ID=votre-projet-firebase
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nVOTRE_CLE_PRIVEE\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@votre-projet.iam.gserviceaccount.com

# Redis (pour le traitement vidéo asynchrone avec BullMQ)
# Décommentez si vous avez Redis installé
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================
# Environnement
# ============================================
NODE_ENV=development
